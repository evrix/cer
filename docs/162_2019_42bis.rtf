\par \pard\plain \s0\rtlch\af11\afs24\alang1081 \ltrch\lang1040\langfe2052\hich\af5\loch\ql\nowidctlpar\hyphpar0\ltrpar\cf1\f5\fs24\lang1040\kerning1\dbch\af9\langfe2052\li0\ri0\lin0\rin0\fi0{\hich\af7\loch\f7\loch
